<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: "Ingrese sus credenciales"
            font_size: 20
            size_hint_y: 0.2

        TextInput:
            id: email
            hint_text: "Correo electrónico"
            multiline: False
            size_hint_y: 0.2

        TextInput:
            id: contraseña
            hint_text: "Contraseña"
            password: True
            multiline: False
            size_hint_y: 0.2

        Label:
            id: error
            text: ""
            color: 1, 0, 0, 1
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: 'Registrarse'
                size_hint: 0.3, 0.2
                on_press: root.registrar_supervisor()

            Button:
                text: "Volver"
                size_hint: 0.3, 0.2
                on_press: root.volver()
